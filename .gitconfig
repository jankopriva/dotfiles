[user]
	name = Jan Kopriva
	email = jan.kopriva@gooddata.com

[merge]
	tool = opendiff

[alias]
    c = commit
    co = checkout
    br = branch
    p = push
    pr = pull --rebase
    s = status
    st = stash
    sp = stash pop
    ss = stash save
    sl = stash list
    i = "!f() { git pr && git p; }; f"
    sh = "!f() { git stash show -p stash@{$1}; }; f"
    sd = "!stashf() { git stash drop stash@{$1}; }; f"
    l = log --pretty=format:'%Cred%h%Creset %Cgreen%s%Creset [%ar by %an]'
    d = diff --color
    pr = pull --rebase
    conflicts = "!f() { git ls-files -u | cut -f 2 | sort -u; }; f"

[push]
    default = tracking # only push current branch

[apply]
    whitespace = nowarn

[core]
    pager = less -FXRS
	editor = /usr/bin/vim
